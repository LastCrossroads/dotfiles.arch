{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#ffffff",
          "properties": {
            "macos": "mac"
          },
          "style": "diamond",
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "template": "󰣇 ",
          "type": "os"
        },
        {
          // "type": "session",
          // "style": "diamond",
          // "foreground": "#eed49f",
          "template": "{{ if .SSHSession }} {{ end }}"
        },
        {
          "background": "#3177e3",
          "foreground": "#000000",
          "powerline_symbol": "\ue0b0",
          "leading_diamond": "\ue0b6",
          "style": "powerline",
          "template": " {{ .UserName }}@{{ .HostName }} ",
          "trailing_diamond": "\ue0b0",
          "type": "session"
        },
//        {
//          "background": "#a2beef",
//          "background_templates": [
//            "{{if eq \"Charging\" .State.String}}#eed49f{{end}}",
//            "{{if eq \"Discharging\" .State.String}}#f5bde6{{end}}",
//            "{{if eq \"Full\" .State.String}}#a6da95{{end}}"
//          ],
//          "foreground": "#193549",
//          "powerline_symbol": "\ue0b0",
//          "style": "powerline",
//          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }}\uf295 \ueb2d ",
//          "type": "battery"
//        },
        {
          "background": "#8aadf4",
          "foreground": "#000000",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "folder"
          },
          "style": "powerline",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#eed49f",
          "foreground": "#000000",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_stash_count": true,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "background": "#6CA35E",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "type": "node"
        },
        {
          "background": "#ffff66",
          "foreground": "#193549",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \uf0e7 ",
          "type": "root"
        },

        {
          "background": "#0077c2",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \uf308 {{.Context}} :: {{if .Namespace}}{{.Namespace}}{{else}}default{{end}} ",
          "type": "kubectl"
        },

        {
          "background": "#a6da95",
          "background_templates": [
            "{{ if gt .Code 0 }}#ed8796{{ end }}"
          ],
          "foreground": "#000000",
          "leading_diamond": " \ue0b6",
          "properties": {
            "always_enabled": true
          },
          "style": "diamond",
          "template": "{{ if eq .Code 0 }}\uf00c{{ else }}\uf071 {{ reason .Code }}{{ end }}",
          "trailing_diamond": "\ue0b4",
          "type": "status"
        },

        {
          "background": "#f5bde6",
          "foreground": "#000000",
          "leading_diamond": "\ue0b6",
          "properties": {
            "style": "round",
            "threshold": 0
          },
          "style": "diamond",
          "template": "\uf253 {{ .FormattedMs }}",
          "trailing_diamond": "\ue0b4",
          "type": "executiontime"
        },

        {
          "type": "sysinfo",
          "foreground": "#000000",
          "background": "#c6a0f6",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "template": " {{ round .Load5 .Precision }}",
          "properties": {
            "precision": 2
          },
          "style": "diamond"
        },

        {
          "type": "wakatime",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "foreground": "#000000",
          "background": "#89b4fa",
          "properties": {
            "url": "https://wakatime.com/api/v1/users/current/summaries?start=today&end=today&api_key={{ .Env.WAKATIME_API_KEY }}",
            "cache_timeout": 10,
            "http_timeout": 500
          }
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          // "background": "#89b4fa",
          // "foreground": "#000000",
          "foreground": "ffffff",
          // "leading_diamond": "  \ue0b6",
          // "style": "diamond",
          "template": "  {{ .Name }}",
          // "trailing_diamond": "\ue0b4",
          "type": "shell"
        },

        {
          "foreground": "p:white",
          "style": "plain",
          "template": " \ue285\ueab6",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],

  "secondary_prompt": {
    "background": "transparent",
    "foreground": "#ffffff",
    "template": "\uea9f "
  },

  "transient_prompt": {
    "background": "transparent",
    "foreground": "#ffffff",
    "template": "{{ .Code }} {{ .PromptCount }}> "
  },

  "tooltips": [
    {
      "type": "git",
      "tips": [
        "git",
        "g"
      ],
      "style": "diamond",
      "foreground": "#000000",
      "background": "#eed49f",
      "leading_diamond": "",
      "trailing_diamond": "",
      "template": "{{ .HEAD }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}",
      "properties": {
        "fetch_status": true,
        "fetch_upstream_icon": true
      }
    }
  ],

  "final_space": true,
  "version": 4
}
