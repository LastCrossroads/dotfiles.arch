{
  // Workspaces
  "hyprland/workspaces" : {
		"disable-scroll": true,
    "all-outputs": false,
    "active-only": false,
    "format": "{icon}",
    "on-click": "activate",
    "format-icons": {
      "1": "一",
      "2": "二",
      "3": "三",
      "4": "四",
      "5": "五",
      "6": "六",
      "7": "七",
      "8": "八",
      "9": "九",
      "10": "十",
      // "urgent": "",
      // "focused": "",
      // "default": ""
    },
    "persistent-workspaces": {
      // START WORKSPACES
      "*": 10
      // END WORKSPACES
    }
  },

  // Taskbar
  "wlr/taskbar": {
     "format": "{icon}",
     "icon-size": 14,
     "tooltip-format": "{title}",
     "on-click": "activate",
     "on-click-middle": "close",
     "ignore-list": [
       "Alacritty",
       "ghostty",
       "kitty",
       "Wave",
       "warp"
     ],
     "app_ids-mapping": {
       "firefoxdeveloperedition": "firefox-developer-edition"
     },
     "rewrite": {
       "Firefox Web Browser": "Firefox",
       "Foot Server": "Terminal"
     }
  },

  // Hyprland Window
  "hyprland/window": {
    "icon": true,
    "rewrite": {
      "~": "Terminal",
      "(.*) - Chromium": "$1",
      "(.*) — Zen Browser": "$1"
    },
    "separate-outputs": true
  },

  // Cliphist
  "custom/cliphist": {
    "format": "",
    "on-click": "sleep 0.1s ; $HOME/.config/hypr/scripts/cliphist.sh",
    "on-click-right": "sleep 0.1s ; $HOME/.config/hypr/scripts/cliphist.sh d",
    "on-click-middle": "sleep 0.1s ; $HOME/.config/hypr/scripts/cliphist.sh w",
    "tooltip": true,
    "tooltip-format": "Clip history"
  },

  // Mail unread count
  "custom/mail": {
    "exec": "$HOME/.local/scripts/mail-count.sh",
    "format": "  {}",
    "restart-:interval": 600,
    "return-type": "",
    "tooltip": "false"
  },

  // Updates Count
  "custom/updates": {
    "format": "󰣇 {}",
    "escape": true,
    "return-type": "json",
    "exec": "~/.config/hypr/scripts/updates.sh",
    "restart-interval": 60,
    "tooltip": true,
    "tooltip-format": "System updates"
  },

  // Wallpaper changer
  "custom/wallpaper": {
    "format": "",
    "on-click": "waypaper",
    "on-click-right": "$HOME/.config/hypr/scripts/wallpaper-effects.sh",
    "tooltip": true,
    "tooltip-format": "Change wallpaper"
  },

  // Waybar themes
  "custom/waybarthemes": {
    "format": "",
    "on-click": "$HOME/.config/waybar/themeswitcher.sh",
    "tooltip": true,
    "tooltip-format": "Change theme"
  },

  // Keybindings
  "custom/keybindings": {
    "format": "",
    "on-click": "~/.config/hypr/scripts/keybindings.sh",
    "tooltip": false
  },

  // Visual Studio Code
  "custom/code": {
    "format": "󰨞",
    "on-click": "code",
    "tooltip": true,
    "tooltip-format": "VS Code"
  },

  // Wireshark
  "custom/wireshark": {
    "format": "󱙳",
    "on-click": "wireshark",
    "tooltip": true,
    "tooltip-format": "Wireshark"
  },

  // Brightness control
  "custom/brightness": {
    "format": "",
    "on-click": "ddcutil --display=1 setvcp 10 + 25",
    "on-click-right": "ddcutil --display=1 setvcp 10 - 25",
    "tooltip": false
  },

  // Reload hyprland and waybar configuration
  "custom/reload": {
    "format": "󰑓",
    "on-click": "hyprctl reload ; $HOME/.config/waybar/launch.sh",
    "tooltip": true,
    "tooltip-format": "Reload WM"
  },

  // Hyprland settings menu
  "custom/hypr": {
    "format": "",
    "tooltip": true,
    "tooltip-format": "Hyprland settings"
  },

  // Hyprland group
  "group/hypr": {
    "orientation": "inherit", "drawer": {
      "transition-duration": 250,
      "children-class": "not-hypr",
      "transition-left-to-right": false
    },
    "modules": [
      "custom/hypr",
      "custom/reload",
      "custom/brightness",
      // "custom/wallpaper",
      "custom/waybarthemes"
    ]
  },

  // Rofi Application Launcher
  "custom/appmenu": {
    // START APPS LABEL
    "format": "Apps",
    // END APPS LABEL
    "on-click": "sleep 0.2;rofi -show drun -replace",
    "on-click-right": "$HOME/.config/hypr/scripts/keybindings.sh",
    "tooltip": false
  },

  // Rofi Application Launcher
  "custom/appmenuicon": {
    "format": "",
    "on-click": "rofi -show drun -replace",
    "on-click-right": "$HOME/.config/hypr/scripts/keybindings.sh",
    "tooltip": false
  },

  // Power Menu
  "custom/exit": {
    "format": "󰐥",
    "on-click": "sleep 0.2;wlogout",
    "tooltip": false
  },

  // Keyboard State
  "keyboard-state": {
    "capslock": true,
    "numlock": true,
    "scrollback": false,
    "format": {
      "capslock": "{icon}",
      "numlock": "{icon}"
    },
    "format-icons": {
      "locked": "",
      "unlocked": ""
    },
  },

  // System tray
    "tray": {
    "icon-size": 22,
    "spacing": 7
  },

  // Clock and calendar
  "clock": {
    "format": "{:%H:%M %Z}",
    "tooltip-format": "<big>{:%A %D}</big>\n<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "week-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b>{}</b></span>"
      }
    },
    "format-alt": "{:%m/%d/%Y}",
    "actions": {
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },

  // Notification replay
  "custom/notification": {
    // "format": "󰍜",
    "format": "{icon}",
    "format-icons": {
      "notification": "<span foreground='red'><sup></sup></span>",
      "none": "",
      "dnd-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-none": "",
      "inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "inhibited-none": "",
      "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true,
    "tooltip": false
  },

  // System meters
  "cpu": {
    "states": {
      "warning": 75,
      "critical": 90
    },
    "interval": 5,
    "format": "󰍛 {usage}%",
    "format-alt": "{icon0}{icon1}{icon2}{icon3}",
    "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"]
  },

  "load": {
    "interval": 5,
    "format": "{load1} {load5} {load15}",
    "tooltip": true,
    "tooltip-format": "Load average: {load1} {load5} {load15}"
  },

  "memory": {
    "states": {
      "warning": 75,
      "critical": 90
    },
    "interval": 10,
    "format-alt": "󰘚 {used:0.1f}GB/{swapUsed:0.1f}GB",
    "format": "󰘚 {percentage}% {swapPercentage}%",
    // "max-length": 5,
    "tooltip": true,
    "tooltip-format": "System memory: {used:0.1f}GB/{total:0.1f}GB Swap: {swapUsed}GB/{totalSwap}GB"
  },

  "temperature": {
    "interval": 5,
    // "thermal-zone": 2,
    "hwmon-path": "/sys/class/hwmon/hwmon2/temp2_input",
    "critical-threshold": 80,
    "warning-threshold": 70,
    // "format-critical": "{icon}&#8239;{temperatureC}°C",
    "format": "{icon}&#8239;{temperatureC}°C",
    "format-icons": ["", "", ""],
    "tooltip": true,
    "tooltip-format": "CPU temperature: {temperatureC}°C"
  },

  "custom/fanspeed": {
    "interval": 5,
    "exec": "cat /sys/class/hwmon/hwmon1/device/fan_speed_rpm",
    "format": "󰈐 {} RPM",
    "tooltip": true,
    "tooltip-format": "Fan speed: {} RPM"
  },

  "custom/gpuinfo": {
    "exec": "cat /sys/class/hwmon/hwmon5/device/gpu_busy_percent",
    "format": "󰡁 {}%",
    "return-type": "",
    "interval": 5,
    "tooltip": true,
    "tooltip-format": "GPU utilization: {}%"
  },

  "custom/gputemp": {
    "exec": "cat /sys/class/hwmon/hwmon2/temp2_input | bc -l | awk '{print int($1/1000)}'",
    "format": " {}°C",
    "return-type": "",
    "interval": 5,
    "states": {
      "critical": 80,
      "warning": 70
    },
    "tooltip": true,
    "tooltip-format": "GPU temperature: {}°C"
  },

  // Keyboard layout
  "hyprland/language": {
    "format": "{short}"
  },

  // System hardware group
  "group/sysinfo": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 250,
      "children-class": "not-cpu",
      "transition-left-to-right": true,
    },
    "modules": [
      "cpu",
      "temperature",
      "custom/gpuinfo",
      "custom/gputemp",
    ]
  },

  // Hyprland settings group
  "group/settings": {
    "orientation": "horizontal",
    "modules": [
      "custom/settings",
      "custom/waybarthemes",
      "custom/wallpaper"
    ]
  },

  // Network status
  "network": {
      "states": {
        "critical": 20,
        "good": 50,
        "warning": 40
      },
    "format": "{ifname}",
    "format-wifi": "󰖩 {signalStrength}%",
    "format-ethernet": " {ifname}:{ipaddr}/{cidr}",
    "format-disconnected": " Disconnected",
    "tooltip-format": " {ifname} via {gwaddr}",
    "tooltip-format-wifi": "󰖩 {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nGateway: {gwaddr}\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
    "tooltip-format-ethernet": " {ifname}\nIP: {ipaddr}\nGateway: {gwaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "on-click": "nm-connection-editor"
  },

  // Battery status
  "battery": {
      "states": {
      "good": 90,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}{capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": "󰚥 {capacity}%",
    "format-alt": "{icon} {time}",
    // "format-good": "",
    "format-icons": [" ", " ", " ", " ", " "],
    "tooltip": true,
    "tooltip": "(timeTo} {power}w"
  },

  // Pulseaudio
  "pulseaudio": {
    "scroll-step": 1,
    "format": "{icon}{volume}% {format_source}",
    "format-bluetooth": " {volume}% {format_source}",
    "format-bluetooth-muted": "󰸈 {volume}%  {format_source}",
    "format-muted": "󰸈 {format_source}",
    "format-source": " {volume}%",
    "format-source-muted": "󰍭",
    "format-icons": {
      "default": ["󰕿 ", "󰖀 ", "󰕾 "]
    },
    "on-click": "pavucontrol",
    "on-click-right": "helvum",
    "tooltip": true,
    "tooltip-format": "Left-click: Sources, Right-click: Routing"
  },

  "pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": " {volume}%",
    "format-source-muted": "",
//    "on-click": "$HOME/.config/hypr/scripts/Volume.sh --toggle-mic",
//    "on-click-right": "pavucontrol -t 4",
//    "on-scroll-up": "$HOME/.config/hypr/scripts/Volume.sh --mic-inc",
//    "on-scroll-down": "$HOME/.config/hypr/scripts/Volume.sh --mic-dec",
//	  "tooltip-format": "{source_desc} | {source_volume}%",
    "scroll-step": 5
  },

  // JACK audio
  "jack": {
    "format": "DSP {load}% {samplerate}Hz {latency}ms",
    "format-disconnected": "DSP off",
    "on-click": "carla",
    "realtime": true
  },

  // Mpris module
  "mpris": {
    // "format": "<i>{title} - {artist} <small>[{position}/{length}]</small></i>",
    // "format-paused": "<i>{title} - {artist} <small>[{position}/{length}]</small></i>",
    "format": "󱑽 <i>{title} - {artist}</i>",
    "format-paused": "󱑽 <i>{title} - {artist}</i>",
    "player-icons": {
      "chromium": "",
      "default": "󰐊",
      "firefox": "󰈹",
      "spotify": "",
      "vlc": "󰕼"
    },
    "status-icons": {
      "paused": "󰏥",
      "playing": "",
      "stopped": ""
    },
    "interval": 1,
    "max-length": 150
  },

  // Cava module (internal)
  "cava": {
    //"cava_config": "$XDG_CONFIG_HOME/cava/cava.conf",
    "framerate": 30,
    "autosens": 1,
    "sensitivity": 100,
    "bars": 14,
    "lower_cutoff_freq": 50,
    "higher_cutoff_freq": 10000,
    "method": "pulse",
    "source": "auto",
    "stereo": true,
    "reverse": false,
    "bar_delimiter": 0,
    "monstercat": true,
    "waves": false,
    "noise_reduction": 0.77,
    "input_delay": 2,
    "format-icons" : ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█" ],
    "actions": {
      "on-click-right": "mode"
      }
    },

  // Cava module (external)
  "custom/cava": {
    "exec": "$HOME/.local/scripts/waybarCava.sh",
    "format": "{}"
  },

  // Bluetooth status
  "bluetooth": {
    "format": " 󰘊",
    "format-disabled": " ",
    "format-connected": " {num_connections}",
    "tooltip-format": " {device_alias}",
    "tooltip-format-connected": "{device_enumerate}",
    "tooltip-format-enumerate-connected": " {device_alias} {device_battery_percentage}%",
    "interval": 10,
    "on-click": "blueman-manager",
    "format-no-controller": " "
  },

  // Uptime display
  "user": {
    "format": "{work_d}:{work_H}:{work_M}",
    "interval": 60,
    "icon": false,
    "on-click": "$FILEMANAGER",
  },

  // Systemd failed units monitor
  "systemd-failed-units": {
	  "hide-on-ok": false,
	  "format": "  {nr_failed_system}",
	  "format-ok": "",
	  "system": true, // Failed systemwide units
	  // "tooltip-format": "systemctl list-units --type=service --state=running --no-legend --no-pager"
	  "user": false // Failed user units
  },

  // Hypridle inhibitor
  "custom/hypridle": {
    "format": "󰍁",
    "return-type": "json",
    "escape": true,
    "exec-on-event": true,
    "interval": 60,
    "exec": "$HOME/.config/hypr/scripts/hypridle.sh status",
    "on-click": "$HOME/.config/hypr/scripts/hypridle.sh toggle",
    "on-click-right": "hyprlock"
  },

  // Color picker
  "custom/colorpicker": {
    "format": "",
    "on-click": "sleep 0.1s ; hyprpicker -a -f hex ; notify-send 'Hex color copied to clipboard'",
    "on-click-right": "sleep 0.1s ; hyprpicker -a -f rgb ; notify-send 'RGB color copied to clipboard'",
    "tooltip": true,
    "tooltip-format": "Color Picker"
  },
  
  // Idle Inhibator
  "idle_inhibitor": {
    "format": "{icon}",
    "tooltip": true,
    "format-icons":{
        "activated": "󱚴",
        "deactivated": "󰍁"
      },
    "on-click-right": "hyprlock"
  },

  // Timer
  "custom/timer": {
    "tooltip": true,
    "return-type": "json",
    "exec": "$HOME/.local/scripts/waybar-timer.sh check",
    "on-click": "$HOME/.local/scripts/waybar-timer.sh minute_dialog",
    "on-click-right": "$HOME/.local/scripts/waybar-timer.sh datetime_dialog",
    "on-click-middle": "$HOME/.local/scripts/waybar-timer.sh stop",
    "interval": 1
  },

  // Weather
  "custom/weather": {
    "format": "{}°",
    "tooltip": true,
    "interval": 3600,
    "exec": "wttrbar --fahrenheit --hide-conditions --location Baltimore --mph",
    "return-type": "json"
  },
}
